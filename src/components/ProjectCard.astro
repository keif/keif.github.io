---
import { slugifyStr } from "@/utils/slugify"
import type { CollectionEntry } from "astro:content"
import dayjs from "dayjs"

export interface Props extends CollectionEntry<"projects"> {
  relatedPosts?: CollectionEntry<"blog">[]
}

const { data, relatedPosts = [] } = Astro.props
const { title, description, url, image, tags = [], launchDate, status } = data

const formattedDate = dayjs(launchDate).format("MMM YYYY")

const statusColors = {
  active: "bg-green-100 text-green-800 dark:bg-green-900/30 dark:text-green-400",
  beta: "bg-blue-100 text-blue-800 dark:bg-blue-900/30 dark:text-blue-400",
  archived: "bg-gray-100 text-gray-800 dark:bg-gray-800/30 dark:text-gray-400",
}
---

<article class="card card-hover group">
  <a
    href={url}
    target="_blank"
    rel="noopener noreferrer"
    class="block focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-accent"
  >
    {
      image && (
        <div class="w-full h-48 overflow-hidden rounded-t-xl bg-muted">
          <img
            src={image}
            alt={`${title} screenshot`}
            class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
          />
        </div>
      )
    }

    <div class="p-6">
      <div class="flex items-start justify-between gap-3 mb-3">
        <h3
          style={{ viewTransitionName: slugifyStr(title) }}
          class="text-xl font-semibold text-foreground hover:text-accent transition-colors prose-headings group-hover:text-accent"
        >
          {title}
        </h3>
        {status && (
          <span
            class={`text-xs font-medium px-2.5 py-1 rounded-full whitespace-nowrap ${statusColors[status]}`}
          >
            {status}
          </span>
        )}
      </div>

      <div class="mb-3 text-sm text-muted-foreground">
        <time datetime={launchDate.toISOString()}>Launched {formattedDate}</time>
      </div>

      <p class="text-muted-foreground mb-4 leading-relaxed">{description}</p>

      {
        tags.length > 0 && (
          <div class="flex flex-wrap gap-2">
            {tags.map((tag: string) => (
              <span class="tag-pill">{tag}</span>
            ))}
          </div>
        )
      }

      <div class="mt-4 flex items-center text-accent text-sm font-medium">
        Visit project
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="ml-1 size-4 transition-transform group-hover:translate-x-1"
          viewBox="0 0 20 20"
          fill="currentColor"
        >
          <path
            fill-rule="evenodd"
            d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z"
            clip-rule="evenodd"
          ></path>
        </svg>
      </div>
    </div>
  </a>

  {
    relatedPosts.length > 0 && (
      <div class="px-6 pb-4 pt-2 border-t border-border/50">
        <p class="text-xs font-medium text-muted-foreground mb-2">Related Blog Posts:</p>
        <ul class="space-y-1.5">
          {relatedPosts.map((post) => (
            <li>
              <a
                href={`/posts/${post.data.slug || post.id.split('/').pop()?.replace(/\.mdx?$/, '')}`}
                class="text-sm text-foreground hover:text-accent transition-colors inline-flex items-center gap-1"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="size-3.5 flex-shrink-0"
                  viewBox="0 0 20 20"
                  fill="currentColor"
                >
                  <path
                    fill-rule="evenodd"
                    d="M12.586 4.586a2 2 0 112.828 2.828l-3 3a2 2 0 01-2.828 0 1 1 0 00-1.414 1.414 4 4 0 005.656 0l3-3a4 4 0 00-5.656-5.656l-1.5 1.5a1 1 0 101.414 1.414l1.5-1.5zm-5 5a2 2 0 012.828 0 1 1 0 101.414-1.414 4 4 0 00-5.656 0l-3 3a4 4 0 105.656 5.656l1.5-1.5a1 1 0 10-1.414-1.414l-1.5 1.5a2 2 0 11-2.828-2.828l3-3z"
                    clip-rule="evenodd"
                  />
                </svg>
                {post.data.title}
              </a>
            </li>
          ))}
        </ul>
      </div>
    )
  }
</article>
